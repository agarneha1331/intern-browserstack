{
  "coverage": false,
  "tunnel": "browserstack",
  "defaultTimeout": 90000,

  "tunnelOptions": {
    "verbose": true,
    "anyOf": [
      { "type": "string", "username": "process.env.BROWSERSTACK_USERNAME", "accessKey": "process.env.BROWSERSTACK_ACCESS_KEY" },
      { "type": "string", "username": "BROWSERSTACK_USERNAME",  "accessKey": "BROWSERSTACK_ACCESS_KEY"}
    ]
  },

  "capabilities": {
    "build": "browserstack build",
    "name": "BStack sample test",
    "browserstack.source": "intern:sample-v4:v1.0",
    "fixSessionCapabilities": false
  },

  "environments": [
    {
      "os": "OS X",
      "osVersion": "Big Sur",
      "browserName" : "Chrome",
      "browserVersion": "latest"
    },
    {
      "os": "Windows",
      "osVersion": "10",
      "browserName" : "Edge",
      "browserVersion": "latest"
    },
    {
      "device": "Samsung Galaxy S22 Ultra",
      "osVersion": "12.0",
      "browserName" : "Chrome"
    }
  ]
}
